<UserControl x:Class="DazFileManager.Views.ExtractViewLeftColumn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DazFileManager.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <!-- File Operations Box-->
            <RowDefinition Height="1*"/>
            <!-- Error Log Box-->
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <local:CollapsibleFolderSelectionBox Grid.Row="0" ItemsSource="{Binding FolderCollection_Downloads}"/>

    </Grid>
</UserControl>
